/* pages/result/r.wxss */
.header {
  font-size: 40rpx;
  text-align: center;
  line-height: 80rpx;
}
.main {
  font-weight: 500;
  font-size: 40rpx;
}
  .swiper-tab {
    text-align: center;
    width: 100%;
    border-bottom: 1px solid #f5f5f5;
  }
    .swiper-tab-list {
      display: inline-block;
      line-height: 2.5;
       width: 33.333%; 
    }
      .on {
        color: #F65959;
        border-bottom: 3px solid #F65959;
      }
  swiper {
    width: 100%;
    padding: 0 20rpx;
    height: 80vh;
  }
  .section {
    position: relative;
    font-size: 30rpx;
    border-bottom: 1px solid #f5f5f5;
    vertical-align: text-top;
    padding: 20rpx 0;
  }
    .section .td {
      position: absolute;
      top: 50%;
      transform: translateY(-50%);
      display: inline-block;
      width: 20%;
    }
    .section .dd {
      margin-left: 80px;
      display: inline-block;
      word-wrap: break-word;
      word-break: break-all;
      width: 73%;
    }
    .user-count {
      width: 95%;
      font-size: 12px;
      color: #ccc;
      text-align: right;
    }